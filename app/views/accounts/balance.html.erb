<%- model_class = Account -%>
<div class="page-header">
  <h1>Auswertung</h1>
</div>
<%= form_tag({:action => :balance}, {:method => :get}) do %>
    <p>Konto TODO: Hat noch keine Auswirkung auf die Anzeige und setzt keinen Default-Value</p>
    <%= collection_select(:account, :id, @accounts, :id, :name, :selected => @selected_account, :include_blank => "ALLE KONTEN") %>
    <p>TODO: Startdatum</p>
    <p>TODO: Enddatum</p>
    <p>TODO: Summer</p>
    <p>TODO: Tabelle mit den einzelnen Buchungen</p>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Art</th>
        <th>Titel</th>
        <th>Betrag</th>
        <th>Steuersatz</th>
        <th>Buchungsdatum</th>
        <th>Erstellungsdatum</th>
      </tr>
      </thead>
      <tbody>
      <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.class.model_name.human %></td>
            <td><%= booking.title %></td>
            <td><%= booking.amount %></td>
            <td><%= booking.tax_rate %></td>
            <td><%= booking.accounting_date %></td>
            <td><%=l booking.created_at %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>