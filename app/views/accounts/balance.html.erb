<%- model_class = Account -%>
<div class="page-header">
  <h1>Auswertung</h1>
</div>
<%= form_tag({:action => :balance}, {:method => :get}) do %>
      <div class="span2">
        <strong>Konto TODO: Hat noch keine Auswirkung auf die Anzeige und setzt keinen Default-Value</strong>
        <%= collection_select(:account, :id, @accounts, :id, :name, :selected => @selected_account, :include_blank => "ALLE KONTEN") %>
      </div>
      <div class="span2">

        <strong>TODO: Startdatum</strong>

        <strong>TODO: Enddatum</strong>
      </div>

      <div class="span1">
        <br />
        <button type="submit" class="btn btn-primary" alt="Filtern">
          <i class="icon-filter"></i>
        </button>
      </div>

    <div class="span12">
      <strong>TODO: Summe</strong>
    </div>


    <table class="table table-striped">
      <thead>
      <tr>
        <th>Art</th>
        <th>Titel</th>
        <th>Betrag</th>
        <th>Steuersatz</th>
        <th>Buchungsdatum</th>
        <th>Erstellungsdatum</th>
      </tr>
      </thead>
      <tbody>
      <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.class.model_name.human %></td>
            <td><%= booking.title %></td>
            <td><%= booking.amount %></td>
            <td><%= booking.tax_rate %></td>
            <td><%= booking.accounting_date %></td>
            <td><%=l booking.created_at %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>